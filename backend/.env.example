# Solvari Radar Engine - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/solvari_radar
REDIS_URL=redis://localhost:6379/0

# ===========================================
# KVK HANDELSREGISTER API
# ===========================================
# Get your API key at: https://developers.kvk.nl/
# Test API is free, Production requires subscription

# Set to "true" to use Production API (real data, 2M+ companies)
# Set to "false" or leave empty to use Test API (test data only)
KVK_USE_PRODUCTION=false

# Your KVK API key (required for production, optional for test)
# Test environment uses default public test key if not set
KVK_API_KEY=

# ===========================================
# GOOGLE PLACES API
# ===========================================
# Get your API key at: https://console.cloud.google.com/
# Enable "Places API" and "Geocoding API"
# Free tier: $200/month credit (~17,000 requests)

GOOGLE_PLACES_API_KEY=

# ===========================================
# AI CLASSIFICATION
# ===========================================
# Anthropic Claude API for AI classification
# Get your key at: https://console.anthropic.com/

ANTHROPIC_API_KEY=

# OpenAI API (optional, for embeddings)
OPENAI_API_KEY=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
DEBUG=true
APP_VERSION=2.1.0

# Scraper settings
SCRAPER_DELAY_MIN=1.0
SCRAPER_DELAY_MAX=3.0
SCRAPER_MAX_CONCURRENT=5

# Classification thresholds
VAKMAN_MIN_YEARS=5
QUALITY_SCORE_THRESHOLD=7.0
